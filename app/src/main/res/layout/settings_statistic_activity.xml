<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#EAEAEA">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shadow"
        android:padding="@dimen/pading_13"
        android:layout_margin="@dimen/margin_16"
        android:layout_weight="1">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_16"
                    android:text="Основные источники стресса"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:id="@+id/source_stress_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin_16">
            <EditText
                android:id="@+id/edit_source_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:hint="Добавьте источник"
                android:layout_marginRight="@dimen/margin_5"/>
            <ImageButton
                android:id="@+id/add_source_button"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:background="@drawable/round_button"
                android:src="@drawable/ic_baseline_add_24"
                android:layout_gravity="center"/>
            </LinearLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shadow"
        android:padding="@dimen/pading_13"
        android:layout_margin="@dimen/margin_16"
        android:layout_weight="1">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Настройки плана дня"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/margin_16"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/intervals_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="@dimen/margin_16"
                        android:layout_marginLeft="35dp">


                    </LinearLayout>
                </ScrollView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin_16">
                <EditText
                    android:id="@+id/edit_title_interval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:hint="Добавьте план на день"
                    android:layout_marginRight="@dimen/margin_5"/>
                <ImageButton
                    android:id="@+id/add_interval_button"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:background="@drawable/round_button"
                    android:src="@drawable/ic_baseline_add_24"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>